<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/single_shop_card"
    android:clickable="true"
    app:cardElevation="100dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:id="@+id/itemImage"
            android:background="@color/purple_500"
            android:contentDescription="Descrizione immagine"
            app:srcCompat="@drawable/bbimage"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/namePlayerTextView"
            android:layout_margin="3dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textAlignment="center"
            android:text="Nome giocatore"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pricePlayerTextView"
            android:layout_margin="3dp"
            android:text="Costo"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/minus_unit_shop_button"
                android:background="@drawable/rounded_blue"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="-"
                android:textSize="15dp"/>

            <EditText
                android:inputType="number"
                android:maxLength="2"
                android:id="@+id/editText_unit_shop"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="30dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/plus_unit_shop_button"
                android:background="@drawable/rounded_blue"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:text="+"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/buy_unit_shop_button"
                android:background="@drawable/rounded_blue"
                android:layout_width="55dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:icon="@drawable/ic_baseline_add_shopping_cart_24"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</androidx.appcompat.widget.LinearLayoutCompat>