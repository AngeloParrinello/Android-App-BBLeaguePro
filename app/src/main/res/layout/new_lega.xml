<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded_grey"
                android:id="@+id/edit_text_name_league"
                android:layout_marginTop="50dp"
                android:layout_width="222dp"
                android:layout_height="48dp"
                android:imeOptions="flagNoExtractUi"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintEnabled="true"
                android:layout_gravity="center_horizontal"
                android:hint="Crea nuova Lega"/>

            <EditText
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded_grey"
                android:id="@+id/edit_text_description_league"
                android:layout_marginTop="40dp"
                android:layout_width="222dp"
                android:layout_height="48dp"
                android:imeOptions="flagNoExtractUi"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintEnabled="true"
                android:layout_gravity="center_horizontal"
                android:hint="Descrive la Lega"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_text_type"
                app:boxStrokeWidth="0dp"
                android:background="@drawable/rounded_grey"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                app:errorEnabled="true"
                app:hintEnabled="true"
                android:imeOptions="flagNoExtractUi"
                android:textSize="14sp"
                android:layout_marginTop="40dp"
                android:layout_width="222dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:hint="Inserisci razza team">

                <AutoCompleteTextView
                    android:background="@drawable/rounded_grey"
                    android:id="@+id/act_race_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textStyle="bold"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:layout_marginTop="40dp"
                android:layout_width="222dp"
                android:layout_height="48dp"
                android:imeOptions="flagNoExtractUi"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:endIconMode="clear_text"
                app:errorEnabled="true"
                app:hintEnabled="true"
                android:layout_gravity="center_horizontal"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded_grey"
                android:id="@+id/edit_text_name_team_league"
                android:hint="Inserisci nome Team"/>

            <com.google.android.material.button.MaterialButton
                android:clickable="true"
                android:id="@+id/create_new_lega_button"
                android:background="@drawable/rounded_blue"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="40dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="Crea Lega" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>